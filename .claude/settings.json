{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "attribution": { "commit": "", "pr": "" },
  "includeCoAuthoredBy": false, // deprecated for attribution setting above
  "env": {
    "DISABLE_TELEMETRY": "1",
  },
  "permissions": {
    "allow": [
    ]
  },

  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write(**/*.py)",
        "hooks": [
          {
            "type": "command",
            "command": "ruff format \"$TOOL_RESULT_file_path\" && ruff check \"$TOOL_RESULT_file_path\" --fix || true"
          }
        ]
      },
      {
        "matcher": "Edit(**/*.py)",
        "hooks": [
          {
            "type": "command",
            "command": "ruff format \"$TOOL_RESULT_file_path\" && ruff check \"$TOOL_RESULT_file_path\" --fix || true"
          }
        ]
      }
    ]
  }
}
